@page
@model PetAdopt.Pages.Animals.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Animal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Animal.id" />
            <div class="form-group">
                <label asp-for="SelectedSpecies" class="control-label"></label>
                <select asp-for="SelectedSpecies" class="form-control">
                    <option value="Dog">Dog</option>
                    <option value="Cat">Cat</option>
                </select>
                <span asp-validation-for="SelectedSpecies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Animal.animal_breed" class="control-label"></label>
                <input asp-for="Animal.animal_breed" class="form-control" />
                <span asp-validation-for="Animal.animal_breed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Animal.animal_age" class="control-label"></label>
                <input asp-for="Animal.animal_age" class="form-control" />
                <span asp-validation-for="Animal.animal_age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Animal.animal_name" class="control-label"></label>
                <input asp-for="Animal.animal_name" class="form-control" />
                <span asp-validation-for="Animal.animal_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
