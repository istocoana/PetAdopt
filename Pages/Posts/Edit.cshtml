@page
@using PetAdopt.Models
@model PetAdopt.Pages.Posts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Post</h4>
<hr />
<div class="row">
    @if (!string.IsNullOrEmpty(Model.Post.ImageFile))
    {
        <img src="@Model.Post.ImageFile" alt="Current Image" style="max-width: 400px;" />

        <br />
    }
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" id="postForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Post.id" />
            <div class="form-group">
                <label asp-for="Post.title" class="control-label"></label>
                <input asp-for="Post.title" class="form-control" />
                <span asp-validation-for="Post.title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.description" class="control-label"></label>
                <input asp-for="Post.description" class="form-control" />
                <span asp-validation-for="Post.description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Post.Location" class="control-label"></label>
                <input asp-for="Post.Location" class="form-control" />
                <span asp-validation-for="Post.Location" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Post.Type" class="control-label"></label>
                <select asp-for="Post.Type" class="form-control">
                    @foreach (var postType in Enum.GetValues(typeof(PostType)))
                    {
                        <option value="@postType">@postType</option>
                    }
                </select>
                <span asp-validation-for="Post.Type" class="text-danger"></span>
            </div>

            <!--
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" type="file" class="form-control" id="imageInput" name="Image">
                       </div>
             -->

            <div class="form-group">
                <label>
                    Vrei să editezi imaginea?
                    <input asp-for="EditImage" type="checkbox" class="form-check-input" id="editImageCheckbox" />
                </label>
             </div>  

        <div id="imageUploadField" style="display:none;">
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" type="file" class="form-control" id="imageInput" name="Image">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('editImageCheckbox').addEventListener('change', function () {
            var imageUploadField = document.getElementById('imageUploadField');
            imageUploadField.style.display = this.checked ? 'block' : 'none';
        });
    </script>

}
