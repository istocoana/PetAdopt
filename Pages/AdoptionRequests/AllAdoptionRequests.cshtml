@page
@model PetAdopt.Pages.AllAdoptionRequestsModel
@using PetAdopt.Models

<h1>Cererile mele de adopție</h1>

@if (Model.AllAdoptionRequests != null && Model.AllAdoptionRequests.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Location</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model.AllAdoptionRequests)
            {
                <tr>
                    <td>@request.Id</td>
                    <td>@request.Location</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nu există cereri de adopție depuse de utilizatorul curent.</p>
}
